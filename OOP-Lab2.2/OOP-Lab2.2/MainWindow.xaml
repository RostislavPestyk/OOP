<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Обчислення виразу" Height="250" Width="400">
    <Grid>
        <Label Content="Введіть x:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="TextBoxX" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="100,10,0,0"/>

        <Label Content="Введіть y:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox x:Name="TextBoxY" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="100,50,0,0"/>

        <Label Content="Введіть z:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <TextBox x:Name="TextBoxZ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="100,90,0,0"/>

        <Button Content="Обчислити" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="100,130,0,0" Click="OnCalculateClick"/>

        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,0,0" FontSize="16"/>
    </Grid>
</Window>

